<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_0.5"
        android:layout_marginEnd="@dimen/margin_1"
        android:layout_marginStart="@dimen/margin_1"
        android:layout_marginTop="@dimen/margin_0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_hight1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/article_category_item_mainactivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/subhead_textsize"
                        tools:text="Unit 1 Lesson 1" />

                    <TextView
                        android:id="@+id/article_name_item_mainactivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_1"
                        android:textColor="@color/grey_800"
                        android:textSize="@dimen/headline_textsize"
                        tools:text="Article Name" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/article_image_item_mainactivity"
                    android:layout_width="@dimen/article_image_item_mainactivity"
                    android:layout_height="@dimen/image_hight1"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/temp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/article_content_item_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:lines="5"
                android:textSize="@dimen/body_textsize"
                tools:text="@string/test_artical_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2">

                <TextView
                    android:id="@+id/read_more_item_mainactivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/seleotor_more_item_mainactivity"
                    android:clickable="true"
                    android:padding="@dimen/margin_0.5"
                    android:text="@string/readmore_item_mainactivity"
                    android:textColor="@color/blue_500"
                    android:textSize="@dimen/action_textsize" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>