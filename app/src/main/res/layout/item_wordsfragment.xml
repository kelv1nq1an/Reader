<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lime_50"
    android:orientation="vertical"
    android:padding="@dimen/margin_1">

    <TextView
        android:id="@+id/word_item_wordsfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/medium_textsize"
        tools:text="fritter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/category_item_wordsfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/subhead_textsize"
            tools:text="v." />

        <TextView
            android:id="@+id/translation_item_wordsfragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_1"
            android:textSize="@dimen/body_textsize"
            tools:text="挥霍，浪费" />

    </LinearLayout>
</LinearLayout>